Checks: >
  bugprone-*,
  performance-*,
  readability-*,
  modernize-*,
#  cppcoreguidelines-*,

WarningsAsErrors: bugprone-*,performance-*,modernize-*

HeaderFilterRegex: 'src/|include/'

FormatStyle: file

CheckOptions:
  - key:             readability-identifier-naming.VariableCase
    value:           camelBack
  - key:             readability-identifier-naming.ClassCase
    value:           CamelCase
  - key:             readability-identifier-naming.FunctionCase
    value:           lower_case